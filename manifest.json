{
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "browser-action.png",
    "default_title": "Wikipedia + IMDB to Letterboxd Search"
  },
  "description": "Lets you take your active Wikipedia/IMDB page and search on Letterboxd with it.",
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "manifest_version": 2,
  "name": "Wikipedia + IMDB to Letterboxd Search",
  "permissions": [
    "activeTab",
    "contextMenus",
	"storage"
  ],
  "options_ui": {
	  "page": "options.html",
	  "open_in_tab": false
	  },
  "version": "1.0.0"
}
